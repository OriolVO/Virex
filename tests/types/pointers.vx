import "io.vx";

func main() -> i32 {
    io.println("Testing Pointers:");
    
    var i32 x = 42;
    var i32*! ptr = &x;
    
    io.print("Value of x: "); io.println(x);
    // Dereference test (if supported by codegen)
    var i32 deref = *ptr;
    io.print("Dereferenced: "); io.println(deref);
    
    return 0;
}
