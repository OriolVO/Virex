import "io.vx";

enum Color {
    Red,
    Green,
    Blue
};

func main() -> i32 {
    io.print("Testing Enums:"); io.print("\n");
    
    var Color c = Green;
    
    if (c == Green) {
        io.print("Initially Green"); io.print("\n");
        io.print("Value: "); io.print(c); io.print("\n");
    } else {
        io.print("Error: Should be Green"); io.print("\n");
        return 1;
    }
    
    c = Red;
    if (c == Red) {
        io.print("Now Red"); io.print("\n");
        io.print("Value: "); io.print(c); io.print("\n");
    } else {
        io.print("Error: Should be Red"); io.print("\n");
        return 1;
    }
    
    return 0;
}
