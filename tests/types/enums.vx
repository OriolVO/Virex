import "io.vx";

enum Color {
    Red,
    Green,
    Blue
};

func main() -> i32 {
    io.println("Testing Enums:");
    
    var Color c = Green;
    
    if (c == Green) {
        io.println("Initially Green");
        io.print("Value: "); io.println(c);
    } else {
        io.println("Error: Should be Green");
        return 1;
    }
    
    c = Red;
    if (c == Red) {
        io.println("Now Red");
        io.print("Value: "); io.println(c);
    } else {
        io.println("Error: Should be Red");
        return 1;
    }
    
    return 0;
}
