// tests/basics/shadowing.vx
// Should pass: variable shadowing in nested scopes

func main() -> i32 {
    var i32 x = 10;
    
    if (x == 10) {
        var i32 x = 20; // Shadow outer x
        if (x != 20) return 1;
    }
    
    // Outer x should be restored
    if (x != 10) return 2;
    
    return 0;
}
