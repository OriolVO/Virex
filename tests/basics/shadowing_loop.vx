// tests/basics/shadowing_loop.vx
// Should pass: loop variable shadowing

func main() -> i32 {
    var i32 sum = 0;
    
    for (var i32 i = 0; i < 3; i = i + 1) {
        var i32 i = 100; // Shadow loop variable
        sum = sum + i; // Should assume inner i (100)
    }
    
    // sum should be 3 * 100 = 300
    if (sum != 300) return 1;
    
    return 0;
}
